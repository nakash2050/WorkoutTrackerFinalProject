
@model WorkoutTracker.Web.ViewModels.WorkoutActiveViewModel

@{
    ViewBag.Title = "End Workout";
}
@section scripts
{
    <script src="~/Scripts/app/end-workout.js"></script>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>End Workout</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.WorkoutId)
        <div class="form-group">
            @Html.LabelFor(model => model.WorkoutTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.WorkoutTitle, new { @class = "form-control", @readonly = "true" })
                @Html.ValidationMessageFor(model => model.WorkoutTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", @style = "width:100%", @maxlength="64" })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-inline" style="margin-left:150px">
            <div class="form-group">
                @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "col-md-4" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.EndDate, new { @type = "date", @class = "form-control", @id = "txtEndDate" })
                    @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.EndTime, htmlAttributes: new { @class = "col-md-5" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.EndTime, new { @type = "time", @class = "form-control", @style = "width:175px", @id = "txtEndTime", @step = "1" })
                    @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div style="margin-left:150px">
            <input type="submit" value="End" class="btn btn-success btn-lg add-category" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger btn-lg add-category" })
        </div>

    </div>
}

