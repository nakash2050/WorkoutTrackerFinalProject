<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Workout Tracker</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed|Oswald|Graduate|Anton" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
                <div class="panel-heading panel-heading main-panel-heading">Workout Tracker</div>
                <div class="panel-body">
                    <div class="navbar">
                        <ul class="nav nav-pills nav-justified">
                            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "ViewAll" ? "active" : "")">@Html.ActionLink("View All", "Index", "ViewAll")</li>
                            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Create" ? "active" : "")">@Html.ActionLink("Create", "Index", "Create")</li>
                            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Category" ? "active" : "")">@Html.ActionLink("Category", "Index", "Category")</li>
                            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Track" ? "active" : "")">@Html.ActionLink("Track", "Index", "Track")</li>
                        </ul>
                    </div>
                    <div class="body-content scrollable-panel">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
